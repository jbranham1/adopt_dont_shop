<h1>All Pets on Application</h1>
<h3>Application Status: <%= @application.status.titleize %></h3>
<% @application.application_pets.each do |application_pet| %>
  <section id="pet-<%=application_pet.pet.id%>">
    Pet: <%= application_pet.pet.name %>
    <% if application_pet.approved? %>
      <p>Approved!</p>
    <% elsif application_pet.rejected? %>
        <p>Rejected!</p>
    <% else %>
      <% if application_pet.pet.approved_application? %>
      <p>Pet has been approved on another application.</p>
      <% else %>
      <%= button_to("Approve Pet", "/admin/applications/#{@application.id}", method: :patch, params: {ap_id: application_pet.id, status: :approved}) %>
      <% end %>
      <%= button_to("Reject Pet", "/admin/applications/#{@application.id}", method: :patch, params: {ap_id: application_pet.id, status: :rejected}) %>
    <% end %>
  </section>
<% end %>
