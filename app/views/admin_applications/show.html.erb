<h1>All Pets on Application</h1>
<h3>Application Status: <%= @application.status.titleize %></h3>
<% @application.application_pets.each do |application_pet| %>
  <section id="pet-<%=application_pet.pet.id%>">
    Pet: <%= application_pet.pet.name %>
<%= render partial: "pet_status", locals: {application_pet: application_pet, application_id: @application.id} %>
  </section>
<% end %>
