<h1>All Pets on Application</h1>
<h3>Application Status: <%= @application.capitalized_status %></h3>
<% @application.application_pets.each do |application_pet| %>
  <section id="pet-<%=application_pet.pet.id%>">
    Pet: <%= application_pet.pet.name %>
    <% if application_pet.approved? %>
      <p>Approved!</p>
    <% elsif application_pet.rejected? %>
        <p>Rejected!</p>
    <% else %>
      <% if application_pet.pet.approved_application? %>
      <p>Pet has been approved on another application.</p>
      <% else %>
        <%= form_with url:"/admin/applications/#{@application.id}", method: :patch, local: true do |form| %>
        <%= form.hidden_field :ap_id, value: "#{application_pet.id}" %>
        <%= form.hidden_field :status, value: :approved %>
        <%= form.submit 'Approve Pet' %>
        <% end %>
      <% end %>
      <%= form_with url:"/admin/applications/#{@application.id}", method: :patch, local: true do |form| %>
      <%= form.hidden_field :ap_id, value: "#{application_pet.id}" %>
      <%= form.hidden_field :status, value: :rejected %>
      <%= form.submit 'Reject Pet' %>
      <% end %>
    <% end %>
  </section>
<% end %>
