<h2><%= @shelter.name %></h2>
<%= @shelter.address %>
<%= @shelter.city %>
<%= @shelter.state %>
<%= @shelter.zip %><br>
<section id="section-stats">
  <p>Average Age of All Adoptable Pets: <%= @shelter.average_age_for_adoptable_pets %></p>
  <p>Count of Adoptable Pets: <%= @shelter.count_of_adoptable_pets %>
  <p>Count of Adopted Pets: <%= @shelter.count_of_adopted_pets %>
</section>
<section id="section-action-required">
  <h2>Action Required</h2>
  <% @shelter.pets.select(&:pending_application?).each do |pet| %>
    <%= pet.name %>
  <% end %>
</section>
